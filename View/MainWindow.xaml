<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Contacts" Height="400" Width="500" MinHeight="400" MinWidth="500" Padding="15" Icon="/contacts_96x96.ico">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Edit Contact" Grid.Column="0" Margin="0,0,0,33">
            <StackPanel>
                <TextBlock Text="Name:" Margin="3"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>

                <TextBlock Text="Phone Number:" Margin="3"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>

                <TextBlock Text="Email:" Margin="3"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Read Contact" Grid.Column="1" Margin="0,0,0,33">
            <StackPanel>
                <TextBlock Text="Name:" Margin="3"/>
                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="3"/>

                <TextBlock Text="Phone Number:" Margin="3"/>
                <TextBlock Text="{Binding PhoneNumber}" FontWeight="Bold" Margin="3"/>

                <TextBlock Text="Email:" Margin="3"/>
                <TextBlock Text="{Binding Email}" FontWeight="Bold" Margin="3"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 0 3" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Button Content="Save" Width="75" Height="25"  Margin="0 0 5 0" Command="{Binding SaveCommand}"/>
            <Button Content="Load" Width="75" Height="25" Command="{Binding LoadCommand}"/>
        </StackPanel>
    </Grid>
</Window>
